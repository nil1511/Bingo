                    td.sel #{i+1}
                    -}
                    -else{
                    td #{i+1}
                -}}
            p upperhouse
        .samplecard
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
                    td.sel #{i+1}
                -}
            p fullhouse
        .samplecard
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
                -if(i>9){
                    td.sel #{i+1}
                -}
                -else{
                    td #{i+1}
