extends layout
block content
    nav.navbar.navbar-default.header
        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav.navbar-right
                li.active
                    a Game
                li
                    a How to play
                li
                    a Quick play
                li
                    a Logout
    .container
        .col-md-5.game
            div.precont
                p#generator 00
                div Previous Nums 
                    label#pre 0,0
            .game.card
                table.table.table-bordered
                    -for(var i=0;i<25;i++){
                       -if(i%5==0){
                        tr(id="row#{i/5+1}")
                       -}
                           td.num(id="cell#{i+1}")
                            b #{number[i]}
                    -}
        .col-md-2#clambuttons.game
            button.btn.btn-danger.clams#uh(type='button') Upper House
            button.btn.btn-danger.clams#lh(type='button') lower house
            button.btn.btn-danger.clams#fh(type='button') full house
        .col-md-7.instruction
            p#howtoplay
            label#time 
            button.btn.btn-danger#letsplay Lets Play
        .col-md-3
            label Results
            table.table.table-condensed#result
                tr
                    td Full House
                    td#fhname
                tr
                    td Upper House
                    td#uhname
                tr
                    td Lower House
                    td#lhname
       
    .container.help
        .samplecard
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
