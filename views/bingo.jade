extends layout
block content
    .container
        .col-md-2.game
            p#generator 00
            div Previous Nums 
                label#pre 0,0
        .col-md-2.game
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                   -if(i%5==0){
                    tr(id="row#{i/5+1}")
                   -}
                       td.num(id="cell#{i+1}")
                        b #{number[i]}
                -}
        .col-md-2#clambuttons.game
            button.btn.btn-danger.clams#uh(type='button') Upper House
            button.btn.btn-danger.clams#lh(type='button') lower house
            button.btn.btn-danger.clams#fh(type='button') full house
        .col-md-6.instruction
            p#howtoplay
            label#time 
            button.btn.btn-danger#letsplay Lets Play
        .chat.col-md-6
            .chatbox Number Declared when you were not online you have 30 sec to click any of these numbers
            p#previousdeclaredNum
            .allNum All Number Declared uptill Now
            p#allNum

    .container.help
        .col-md-3
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
                    -if(i<15){
                    td.sel #{i+1}
                    -}
                    -else{
                    td #{i+1}
                -}}
            p upperhouse
        .col-md-3
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
                    td.sel #{i+1}
                -}
            p fullhouse
        .col-md-3
            table.table.table-bordered
                -for(var i=0;i<25;i++){
                -if(i%5==0){
                tr
                -}
                -if(i>9){
                    td.sel #{i+1}
                -}
                -else{
                    td #{i+1}
                -}}
            p lowerhouse
        .col-md-3
            label Results
            table.table.table-condensed
                tr
                    td Full House
                    td#fhname
                tr
                    td Upper House
                    td#uhname
                tr
                    td Lower House
                    td#lhname
