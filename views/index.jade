extends layout

block content
    .header.nav-header
        h1= title
        ul.menu
            li#home
                a(href="/") home
            li#register
                a(href="/register") register
            li#login
                a(href="#login") login
    .container
        p Welcome to #{title}
        form(role="form")
            .form-group
                label.col-lg-2.control-label(for="inputusername") username
                .col-lg-10
                    input.form-control#username(type="text",placeholder="username")
            .form-group
                label.col-lg-2.control-label(for="password") password
                .col-lg-10
                    input.form-control#password(type="password",placeholder="password")
            .form-group
                .col-lg-offset-2.col-lg-10
                button.btn.btn-default(type="submit") SignIn
